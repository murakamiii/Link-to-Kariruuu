{
  "manifest_version": 3,
  "name": "link to calil",
  "version": "1.0",
  "description": "Get ISBN from the webpage and open it on Calil in a new tab",
  "permissions": ["activeTab", "contextMenus", "scripting"],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
