{
  "manifest_version": 3,
  "name": "link to calil",
  "version": "1.0",
  "description": "Get ISBN from the webpage and open it on Calil in a new tab",
  "permissions": ["activeTab", "contextMenus"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
